  font-weight: bold;
  margin-bottom: 40px;
  font-size: 2rem;
}

/* Grid de cards */
.portfolio-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

.portfolio-card {
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  cursor: pointer;
  transition: transform 0.2s;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.portfolio-card:hover {
  transform: scale(1.03);
}

.portfolio-thumbnail {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.portfolio-card-body {
  padding: 15px;
}

.portfolio-card-title {
  font-size: 1rem;
  font-weight: bold;
  color: #007bff;
  margin: 0;
}

/* Modal */
.portfolio-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  display: none;
  align-items: center;
  justify-content: center;
  padding: 20px;
  z-index: 1000;
}

.portfolio-modal.show {
  display: flex;
}

.portfolio-modal-content {
  background: #fff;
  border-radius: 12px;
  max-width: 900px;
  width: 100%;
  padding: 20px;
  position: relative;
}

.portfolio-modal-close {
  position: absolute;
  top: 15px;
  right: 15px;
  background: transparent;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
}

.portfolio-modal-title {
  margin-bottom: 20px;
  font-weight: bold;
}

.portfolio-modal-body {
  display: flex;
  flex-direction: row;
  gap: 20px;
}

.portfolio-media {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.portfolio-media-img{
  width: 300px;
  height: 200px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}


.portfolio-media-video {
  width: 100%;
  border-radius: 8px;
}

/* Ajuste espec√≠fico para v√≠deos do YouTube (iframe) */
.portfolio-media-video {
  aspect-ratio: 16 / 9; /* Mant√©m propor√ß√£o correta em qualquer tela */
  height: auto;
}

/* Descri√ß√£o */
.portfolio-description {
  flex: 1;
  text-align: left;
}

/* Responsividade */
@media (max-width: 992px) {
  .portfolio-grid {
    grid-template-columns: repeat(2, 1fr);
    margin-bottom: 5%;
  }

  .portfolio-section {
    margin-bottom: -12%;
  }

  .portfolio-modal-body {
    flex-direction: column;
  }
}

@media (max-width: 576px) {
  .portfolio-grid {
    grid-template-columns: 1fr;
  }

  .portfolio-title {
    font-size: 1.5rem;
  }

  .portfolio-thumbnail {
    height: 150px;
  }
}
